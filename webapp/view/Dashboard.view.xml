<mvc:View controllerName="com.application.sapui5-application.controller.Dashboard" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f">
	<App id="app">
		<pages>
			<Page id="page" title="{i18n>title}" showHeader="false">
				<content>

					<f:ShellBar title="Uttermost Head" secondTitle="Dashboard" homeIcon="" showCopilot="true" showNotifications="true" notificationsNumber="2">
						<f:profile>
							<Avatar initials="UI" />
						</f:profile>
					</f:ShellBar>

					<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
						<headerToolbar>
							<OverflowToolbar>
								<Title text="Project Management" />
							</OverflowToolbar>
						</headerToolbar>
						<content>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Create New Project" subheader="Project Wizard" press="onCreateProject">
								<TileContent unit="Projects" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Projects" subheader="Manage Projects" press="onManageProject">
								<TileContent unit="Projects" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="All Tasks" subheader="Manage Tasks" press="onManageTask">
								<TileContent unit="Tasks" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

						</content>
					</Panel>

					<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
						<headerToolbar>
							<OverflowToolbar>
								<Title text="User Management" />
							</OverflowToolbar>
						</headerToolbar>
						<content>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Users" subheader="Manage Users" press="onManageUser">
								<TileContent unit="Users" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>


							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Departments" subheader="Manage Departments" press="onManageDepartment">
								<TileContent unit="Departments" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="User Roles" subheader="Manage User Roles" press="onManageRoles">
								<TileContent unit="Roles" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

						</content>
					</Panel>

					<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
						<headerToolbar>
							<OverflowToolbar>
								<Title text="Status and Priority Management" />
							</OverflowToolbar>
						</headerToolbar>
						<content>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Status" subheader="Manage Status" press="onManageStatus">
								<TileContent unit="Status" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Priorities" subheader="Manage Priorities" press="onManagePriority">
								<TileContent unit="Priorities" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

						</content>
					</Panel>

					<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
						<headerToolbar>
							<OverflowToolbar>
								<Title text="Client Management" />
							</OverflowToolbar>
						</headerToolbar>
						<content>

							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Organizations" subheader="Manage Organzations" press="onManageOrganization">
								<TileContent unit="Clients" footer="Total">
									<NumericContent value="12" withMargin="false" />
								</TileContent>
							</GenericTile>

						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>